@model ASC.WEB.Areas.ServiceRequests.Models.NewServiceRequestViewModel
@using System.Globalization

@{
    Layout = "_SecureLayout";
}

<div class="row">
    <div class="row padding-top-20px padding-left-20px padding-right-20px">
        <div class="row z-depth-3">
            <div class="col s12 padding-0px">
                <div class="section white-text padding-left-10px blue-grey lighten-1">
                    <h5>New Service Request</h5>
                </div>
                <div class="divider"></div>

                <form asp-controller="ServiceRequest" asp-action="ServiceRequest" method="post">
                    <div class="col s12">

                        <div class="row">
                            <div class="input-field col s6">
                                <select asp-for="VehicleName" asp-items="@(new SelectList(ViewBag.VehicleNames, "RowKey", "Name"))" class="validate" required>
                                    <option value="" disabled>Please select one</option>
                                </select>
                                <label asp-for="VehicleName"></label>
                                <span asp-validation-for="VehicleName" class="red-text"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s6">
                                <select asp-for="VehicleType" asp-items="@(new SelectList(ViewBag.VehicleTypes, "RowKey", "Name"))" class="validate" required>
                                    <option value="" disabled>Please select one</option>
                                </select>
                                <label asp-for="VehicleType"></label>
                                <span asp-validation-for="VehicleType" class="red-text"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s6">
                                <input asp-for="RequestedDate" type="text" class="datepicker" />
                                <label asp-for="RequestedDate"></label>
                                <span asp-validation-for="RequestedDate" class="red-text"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <textarea asp-for="RequestedServices" class="materialize-textarea validate"></textarea>
                                <label asp-for="RequestedServices"></label>
                                <span asp-validation-for="RequestedServices" class="red-text"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12 right-align">
                                <button class="btn waves-effect waves-light btnSubmit" type="submit" name="action">
                                    Create
                                    <i class="material-icons right">send</i>
                                </button>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s12 right-align">
                                <div asp-validation-summary="All" class="red-text text-darken-2"></div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.datepicker').datepicker({
                format: 'dd/mm/yyyy'
            });
            $('select').formSelect();
            // Bỏ phần set css visibility ẩn cho required select để tránh lỗi validation
            //$('select[required]').css({ display: 'block', position: 'absolute', visibility: 'hidden' });
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}
